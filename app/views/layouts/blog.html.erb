<!DOCTYPE html>
  <html>
    <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="keywords" content = <%= @seo_keywords %>>
      <%= favicon_link_tag 'favicons/favicon3.ico' %>
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
      <div class="container">
                <%= render 'shared/blog_nav' %>
                <%= render 'shared/blog_masthead_fir' unless logged_in?(:site_admin) %>
                <%= render 'shared/blog_masthead_sec' unless logged_in?(:site_admin) %>

        <span><%= link_to 'Write a New Blog', new_blog_path if logged_in?(:site_admin) %></span>
        <span><%= link_to "Topics", topics_path %></span>
                
                   </div>  
                  <!-- <hr> -->
                   <main role="main" class="container">
                   <div class="row">

                    <%= yield %>
                     <%= alerts %>
                    <%= render 'shared/blog_sidebar' %>
                  <!-- < render "shared/nav",location: 'bottom' %> -->
                  <div>
                 
                </div>
                    </div>
                </main>
                <%= render '/shared/blog_footer' %>

    </body>
  </html>